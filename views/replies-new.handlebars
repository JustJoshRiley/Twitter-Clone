<div class="Form-Container">
    <form class="Form-Content" action="/posts/{{post._id}}/comments/{{comment._id}}/replies" method="post">
        <div class="form-group">
            <textarea name="content" class="form-control" id="reply-content" placeholder="Reply"></textarea>
        </div>

        <div class='text-right'>
            <button type="submit" class="submit-button">Reply</button>
        </div>
    </form>
</div>